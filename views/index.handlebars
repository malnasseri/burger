<div class="container">
	<div class="jumbotron">
		<h1><span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span> Eat-Da-Burger! </h1>
		<img id="img" src="/assets/images/burger.jpg">
	</div>
	{{!-- burger list before being eaten --}}
	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<div class="panel-panel default">
				<ul class="list-group">
					{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item">
						<div class="input-group">
							<p class="lead"> {{this.burger_name}} </p>
							<span class="input-group-btn">
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-primary btn-lg" type="submit"> Devour it! </button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
					{{/each}}
				</ul>
			</div>
		</div>
		{{!-- Devoured burger list  --}}
		<div class="row">
			<div class="col-md-4 col-md-offset-2">
				<div class="panel panel-default">
					<ul class="list-group">
						{{#each burgers}}
						{{#if this.devoured}}
						<li id="devoured" class="list-group-item">
							<p class="lead">{{this.burger_name}} </p>
						</li>
						{{/if}}
						{{/each}}
					</ul>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<p id="par"class="lead"> Enter the name of the burger you want to eat & click Add Burger button </p>
				{{!-- add burgers Form --}}
				<form class="create-update-form" action="burgers/create" method="POST">
					<div class="form-group">
						<textarea class="form-control input-lg" type="text" name="b_name" rows="3"> </textarea>
					</div>
					<button class="btn2 btn-primary btn-lg" type="submit">Add Burger!</button>
				</form>
			</div>
		</div>
	</div>
</div>