				<h1>Already Eaten!</h1>
				{{#each burgers}}
				{{#if this.devoured}}

		<div class="grid-1-5">
			<h2>Order #{{this.id}}</h2>
			<h3><span class="uppercase">{{this.burger_name}}</span></h3>
			<div class="row">
			<div class="col-sm-6 left-condiments">
			<ul>
				<li>{{this.lettuce}}</li>
				<li>{{this.tomatoes}}</li>
				<li>{{this.onions}}</li>
				<li>{{this.ketchup}}</li>
				<li>{{this.mayo}}</li>
			</ul>
			</div>
			<div class="col-sm-6"></div><ul>
				<li>{{this.pickles}}</li>
				<li>{{this.bacon}}</li>
				<li>{{this.cheddar}}</li>
				<li>{{this.american}}</li>
				<li>{{this.bbq}}</li>
				

			</ul></div>
			<div class="btns">
				<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="false">
					<button class="button2" type="submit"> Re Order! </button>
				</form>
				<form action="burgers/delete/{{this.id}}?_method=POST" method="POST">
					<input type="hidden">
					<button class="button" type="submit">Delete </button>
				</form>
			</div>
		</div>
						{{/if}}
						{{/each}}
