	{{!-- burger list before being eaten --}}
	<div class="row main-content">
		<div class="col-sm-6 ready">
			<h1>Ready to Eat Orders!</h1>
				
					{{#each burgers}}
					{{#unless this.devoured}}
					
					<div class="grid-1-5">
			<h2 class="id">Order #{{this.id}}</h2>
			<h3><span class="uppercase">{{this.burger_name}}</span></h3>
			<div class="row">
			<div class="col-sm-6">
			<ul>
				<li>{{this.lettuce}}</li>
				<li>{{this.tomatoes}}</li>
				<li>{{this.onions}}</li>
				<li>{{this.ketchup}}</li>
				<li>{{this.mayo}}</li>

			</ul>
			</div>
			<div class="col-sm-6"></div><ul>
				<li>{{this.pickles}}</li>
				<li>{{this.bacon}}</li>
				<li>{{this.cheddar}}</li>
				<li>{{this.american}}</li>
				<li>{{this.bbq}}</li>
				

			</ul></div>
			<div class="btns">
				<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="button2 eat" type="submit"> Eat it! </button>
								</form>
				<form action="burgers/delete/{{this.id}}?_method=POST" method="POST">
					<input type="hidden">
